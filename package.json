{
  "scripts": {
    "dev": "node-dev --respawn ./src/index.js",
    "build": "node build.js",
    "prepare": "husky install"
  },
  "dependencies": {
    "esbuild": "^0.15.18",
    "esbuild-node-externals": "^1.5.0",
    "koa": "^2.13.4",
    "koa-bodyparser": "^4.3.0",
    "koa-router": "^12.0.0",
    "winston": "^3.8.2",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "devDependencies": {
    "eslint": "^8.29.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-plugin-import": "^2.26.0",
    "husky": "^8.0.2",
    "lint-staged": "^13.1.0",
    "node-dev": "^7.4.3",
    "prettier": "^2.8.0"
  },
  "eslintConfig": {
    "env": {
      "commonjs": true,
      "es2021": true,
      "node": true
    },
    "extends": "airbnb/base",
    "overrides": [],
    "parserOptions": {
      "ecmaVersion": "latest"
    },
    "rules": {
      "no-console": "off",
      "no-restricted-syntax": "off",
      "no-promise-executor-return": "off"
    }
  },
  "prettier": {
    "printWidth": 120,
    "singleQuote": true,
    "trailing-comma": "all"
  },
  "lint-staged": {
    "*.{md,json}": [
      "prettier --write"
    ],
    "*.js": [
      "prettier --write",
      "eslint --fix"
    ]
  }
}
